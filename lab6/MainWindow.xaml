<Window x:Class="lab6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="403*"/>
            <ColumnDefinition Width="397*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="373*"/>
            <RowDefinition Height="61*"/>
        </Grid.RowDefinitions>
        <Grid Grid.RowSpan="2" Grid.ColumnSpan="2"/>
        <StackPanel Orientation="Vertical" Grid.ColumnSpan="1" >
            <Label Content="X"></Label>
            <TextBox x:Name="XInput"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" Grid.ColumnSpan="2">
            <Label Content="N"></Label>
            <TextBox x:Name="NInput"></TextBox>
        </StackPanel>
        <Button x:Name="Calculate" FontSize="24px" Content="Calculate" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Click="Calculate_Click"></Button>

    </Grid>
</Window>
